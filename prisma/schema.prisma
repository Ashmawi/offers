// Prisma schema for Next.js + Turso integration
// Turso is a distributed SQLite database platform

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("TURSO_DATABASE_URL")
}

// المتجر
model Store {
  id        Int       @id
  name      String    @unique
  slug      String    @unique
  logo      String?
  catalogs  Catalog[]
}

// الكتالوج
model Catalog {
  id           String   @id @default(cuid())
  storeId      Int
  store        Store    @relation(fields: [storeId], references: [id])
  title        String
  description  String?
  validUntil   DateTime
  thumbnail    String
  pdfLink      String?
  images       String   // JSON string array
  createdAt    DateTime @default(now())
}